<section class="bg-gray-100">
    <div class="flex min-h-screen">
      <!-- Left Panel -->
      <div class="w-64 bg-gray-800 text-white">
        <div class="flex items-center justify-center h-16 border-b border-gray-700">
          <span class="text-xl font-bold">Dashboard</span>
        </div>
        <div class="text-lg font-bold text-center mt-4 border-2 border-white">CPF: <%=user.cpfnumber%> </div>
        <nav class="py-2">
            <ul class="list-none pl-0">
                <a href="/admin/dashboard"><li class="px-8 py-2 hover:bg-gray-700">Dashboard</li></a>
                <a href="/admin/activefile"><li class="px-8 py-2 hover:bg-gray-700">Active File</li></a>
                <a href="/admin/createfile"><li class="px-8 py-2 hover:bg-gray-700">Create File</li></a>
                <a href="/admin/deletefile"><li class="px-8 py-2 hover:bg-gray-700">Delete File</li></a>
                <a href="/admin/signup"><li class="px-8 py-2 hover:bg-gray-700">Register User</li></a>
                <a onclick="document.getElementById('logout').submit()" href="#"><li class="px-8 py-2 hover:bg-gray-700"><form id="logout" action="/logout" method="post">Logout</form></li></a>
              </ul>
        </nav>
      </div>

      <div class="border rounded-md w-full p-6 font-bold h-fit">
        <h1 class="text-2xl font-bold mb-4">Delete Files</h1>
        <% if (files.length > 0) { %>
        <form action="/admin/deletefile" method="POST">
        <% files.forEach(function(file) { %>
        <div class="bg-white shadow-md rounded-lg px-8 py-6 mb-4">
            <div class="mb-8">
                <span class="block text-gray-700 font-bold mb-2">User</span>
                <div class="fetch-files form-control w-full px-4 py-2 mt-2"><%=file.user%></div>
            </div>
            <div class="mb-8">
                <span class="block text-gray-700 font-bold mb-2">Title</span>
                <div class="fetch-files form-control w-full px-4 py-2 mt-2"><%=file.title%></div>
            </div>
            <div class="mb-16">
                <span class="block text-gray-700 font-bold mb-2">Description</span>
                <div class="form-control w-full px-4 py-2 mt-2"><%=file.description%></div>
            </div>
            <label class="block text-gray-700 font-bold mb-2">
                <input type="checkbox" name="fileIds" value="<%=file._id%>">
                <span class="ml-2 text-red-500">Select File</span>
            </label>
        </div>
        <% }) %>
            <button type="submit" class="btn btn-primary px-6 py-2 rounded-full text-white font-bold mt-4">Delete Selected Files</button>
        </form>
        <% } else { %>
            <div class="mx-auto text-center">
                <img class="w-1/4 mx-auto mb-14 mt-32" src="/img/empty_file.png" alt="Empty Cart">
                <p>Nothing to delete</p>
                <p>Click on below button to create file now</p>
                <a href="/admin/createfile"><button class="btn btn-primary">Create File</button></a>
            </div>
        <% } %>
      </div>
    </div>
</section>